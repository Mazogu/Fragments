<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.micha.funwithfragments.AlertActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Alert"
        android:layout_margin="@dimen/smallMargin"
        android:onClick="callAlert"
        android:id="@+id/defaultAlert"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Alert"
        android:layout_margin="@dimen/smallMargin"
        android:onClick="callAlert"
        android:id="@+id/customAlert"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice Alert"
        android:layout_margin="@dimen/smallMargin"
        android:onClick="callAlert"
        android:id="@+id/choiceAlert"/>

</LinearLayout>
